{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "@vercel/node"
    }
  },
  "rewrites": [
    { "source": "/health", "destination": "/api/server.js" },
    { "source": "/api/(.*)", "destination": "/api/server.js" },
    { "source": "/movie.html", "destination": "/movie.html" },
    {
      "source": "/(.*\\.(js|css|svg|png|jpg|jpeg|gif|ico|woff|woff2|ttf|eot))",
      "destination": "/$1"
    },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=300" }
      ]
    }
  ],
  "env": {
    "TMDB_API_KEY": "@tmdb_api_key"
  }
}